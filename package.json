{
  "name": "@codemucker/jest-scenario",
  "description": "Wrapper/extensions to JEST to make it easy to run scenario's using given/when/then",
  "license": "MIT",
  "version": "0.2.0",
  "authors": [
    "Bert van Brakel"
  ],
  "keywords": [
    "typescript",
    "lang"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:codemucker/codemucker-js-jest-scenario.git"
  },
  "private": false,
  "main": "build/js/src/index.js",
  "types": "build/js/src/index.d.ts",
  "scripts": {
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test && yarn run lint",
    "preversion": "yarn run lint",
    "postversion": "git push && git push --tags",
    "release": "yarn publish --access public",
    "pre-commit": "yarn run format && yarn run lint && yarn run test",
    "version": "yarn run format && git add -A src",
    "format": "npx prettier --write .",
    "lint": "npx prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "clean": "rm -fR build && rm -fR node_modules/",
    "build": "tsc",
    "build-watch": "tsc --watch",
    "test": "yarn run build && jest --verbose=true --detectOpenHandles --coverageDirectory build/jest-coverage",
    "test-watch": "watch 'yarn run test' ./src/ ./test/"
  },
  "dependencies": {
    "@codemucker/lang": "^0.1.1",
    "@codemucker/logging": "^0.1.1",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.1",
    "prettier": "2.1.2",
    "shared-git-hooks": "^1.2.1",
    "ts-jest": "^26.4.0",
    "typescript": "~3.9.3"
  }
}
